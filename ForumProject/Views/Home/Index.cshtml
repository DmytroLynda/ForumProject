@using ForumProject.Data
@model List<ForumProject.Models.ViewModels.DiscussionViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class=".container-fluid">
    <h1 class=".col-lg-12 text-center">Our discussions:</h1>
</div>

<div class="container align-content-center message-color rounded">
    
    @foreach (var discussion in Model)
    {
        <div>
            <div class=".col-12">@Html.Raw(discussion.Author.UserName)</div>
            <div class="col-12">
                <p>
                    <a asp-controller="Discussion"
                       asp-action="Index"
                       asp-route-id="@discussion.DiscussionId">
                        @Html.Raw(discussion.Topic)
                    </a>
                </p>
            </div>
        </div>
    }

