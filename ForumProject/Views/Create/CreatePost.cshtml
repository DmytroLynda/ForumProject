@model ForumProject.Models.ViewModels.CreatePostViewModel
@{
    ViewData["Title"] = "Discussion";
}

<div class="container-fluid">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new post.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Topic"></label>
                <input asp-for="@Model.Topic" class="form-control" />
                <span asp-validation-for="@Model.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Message"></label>
                <textarea asp-for="@Model.Message" class="form-control"></textarea>
                <span asp-validation-for="@Model.Message" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>